<h1>Listing exercise</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Intro</th>
    <th>link</th>
  </tr>
 
  <% @exercises.each do |exercise| %>
    <tr>
      <td><%= exercise.id %></td>
      <td><%= exercise.question %></td>
      <td><%= exercise.answer %></td>
      <td><%= link_to "Detail",course_exercise_path(:id =>exercise.id) %></td>
    </tr>
  <% end %>
</table>